{
  "name": "typescript-app-template",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/hal-shu-sato/typescript-app-template.git",
  "license": "UNLICENSED",
  "author": "ato lash <28973861+hal-shu-sato@users.noreply.github.com>",
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "dev": "npm-run-all2 -p watch start",
    "prepare": "husky",
    "lint": "npm-run-all2 lint:*",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check .",
    "fix": "npm-run-all2 fix:*",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write ."
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/eslint__js": "^8",
    "@types/node": "^22",
    "eslint": "^9",
    "eslint-config-prettier": "^9",
    "globals": "^15",
    "husky": "^9",
    "lint-staged": "^15",
    "nodemon": "^3",
    "npm-run-all2": "^6",
    "prettier": "^3",
    "prettier-plugin-packagejson": "^2",
    "ts-node": "^10",
    "typescript": "^5",
    "typescript-eslint": "^8"
  }
}
